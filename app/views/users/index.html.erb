<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        <%= user.name %>
        <br>
        <%= link_to 'See Profile',  user_path(user), class: 'profile btn btn-outline-success btn-sm' %>
        <%= friend_status(user) %>
        <%= display_name(user) %>
        <%= reject_response(user) %>
        <%= accept_response(user) %>
      </li>
    <% end %>
  </ul>
</section>


